{
  "eslint.run": "onSave",

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "py"
  ],

  "python.linging.flake8Enabled": true,
  "python.formatting.provider": "black",

  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  "coc.preferences.formatOnType": true,
  "coc.preferences.hoverTarget": "echo",
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd"
}
